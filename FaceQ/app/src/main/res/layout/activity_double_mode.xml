<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <Button android:id="@+id/btn_back"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_back_bg_selector"
            android:text="  返回"
            android:textSize="16sp"
            android:textColor="@drawable/btn_back_bg_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双人模式"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black_87"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_bg"
        android:gravity="center">

        <ImageView
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bt_dmode0_selector"/>

        <ImageView
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"
            android:src="@drawable/bt_dmode1_selector"/>

        <ImageView
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"
            android:src="@drawable/bt_dmode2_selector"/>

    </LinearLayout>

</LinearLayout>
